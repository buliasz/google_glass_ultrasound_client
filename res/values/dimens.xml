    <!-- The distance between the top edge of a card and the top edge of a tips-view. -->
    <dimen name="tip_margin_top">80px</dimen>

    <!-- The distance between the right edge of a card and the right edge of a tips-view. -->
    <dimen name="tip_margin_right">40px</dimen>

